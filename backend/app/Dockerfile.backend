FROM python:3.11

WORKDIR /app

# Copie TOUT le dossier backend (y compris app/)
COPY ./backend /app

# Ajoute le répertoire /app à PYTHONPATH pour que les imports absolus comme "from app.routes" fonctionnent
ENV PYTHONPATH=/app

# Installe les dépendances
RUN pip install --no-cache-dir -r app/requirements.txt

# Lance l'application FastAPI
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "80"]