{
  "family": "smartbank-frontend-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "containerDefinitions": [
    {
      "name": "smartbank-frontend",
      "image": "{{IMAGE_URI}}",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {"name": "API_URL","value": "{{API_URL}}"},
        { "name": "COGNITO_REDIRECT_URI", "value": "{{COGNITO_REDIRECT_URI}}" },
        { "name": "COGNITO_DOMAIN", "value": "{{COGNITO_DOMAIN}}" },
        { "name": "COGNITO_CLIENT_SECRET", "value": "{{COGNITO_CLIENT_SECRET}}" },
        { "name": "COGNITO_CLIENT_ID", "value": "{{COGNITO_CLIENT_ID}}" }

    ]
    }
  ],
  "executionRoleArn": "arn:aws:iam::{{ACCOUNT_ID}}:role/ecsTaskExecutionRole"
}
